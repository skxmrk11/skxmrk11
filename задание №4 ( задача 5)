#include <cmath>
#include <cstdio>

/* Напишите программу, которая запрашивает у пользователя число и выводит на
 * экран сумму всех чисел от 1 до этого числа
 */

int main() {
  int a;
  printf("Число: ");
  scanf("%d", &a);
  printf("Сумма от 1 до числа (включительно): %d\n",
         a * (a + 1) / 2);  // Циклы? ;)
  return 0;
}
