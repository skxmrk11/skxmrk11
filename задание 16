#include <iostream>
using namespace std;

int main() {

    setlocale(LC_ALL, "Russian");
    int n;

    cout << "Введите возраст в месяцах (1 <= n <= 1188): ";
    cin >> n;

    int years = n / 12;
    int months = n % 12;

    if (years == 0) {
        cout << months << " месяцев" << endl;
    }
    else if (months == 0) {
        cout << years << " " << (years == 1 ? "год" : "лет") << endl;
    }
    else {
        cout << years << " " << (years == 1 ? "год" : "года") << " " << months << " месяцев" << endl;
    }

    return 0;
}
